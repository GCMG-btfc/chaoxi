  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);

}
/*    按钮    */
.btn{
  /*margin-top: 40%;*/
  
  margin-bottom: 10%;
  
}
.btn_1{
  display: flex;
  margin-bottom: 10%;
  flex-wrap: nowrap;
}
.btn_b {
  
  justify-content: center;
  width: 40%;
  margin-top: 30%;
  
  background-color: #fff;
  color: #87CEFA;
  border-radius: 1.2rem;
  size: mini;
}
.btn_b::after{
  border-radius: 0;
  border: none;
}
.btn_c{
  justify-content: center;
  width: 30%;
  margin-top: 30%;
  
  background-color: #fff;
  color: #87CEFA;
  border-radius: 1.2rem;
  size: mini;
}
.btn_c::after{
  border-radius: 0;
  border: none;
}

